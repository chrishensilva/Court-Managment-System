{
  "name": "court",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"vite\" \"node src/js/server.js\"",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "electron:build": "npm run rebuild && vite build && electron-builder -w"
  },
  "build": {
    "appId": "com.chrishensilva.court",
    "productName": "Case Management System",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "userdb (1).sql"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    }
  },
  "dependencies": {
    "@honeybadger-io/js": "^6.12.3",
    "@honeybadger-io/react": "^6.1.27",
    "axios": "^1.13.5",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.6",
    "dexie": "^4.3.0",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "mysql2": "^3.16.1",
    "nodemailer": "^8.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "vite": "^7.2.4",
    "wait-on": "^9.0.4"
  }
}
